modules = ["bash", "nodejs-22", "python-3.11"]
[replit]
language = "python3"
run = "python3 local_runner/validate_config.py --base config/config_pack.base.json --patch config/config_pack.example.patch.json && python3 local_runner/run_local.py --base config/config_pack.base.json --patch config/config_pack.example.patch.json --standardized examples/standardized_dataset.example.json --out out/sf_packet.preview.json"

[nix]
channel = "stable-25_05"
packages = ["freetype", "gitFull", "gumbo", "harfbuzz", "jbig2dec", "libjpeg_turbo", "mupdf", "nano", "openjpeg", "playwright-driver", "swig", "xcbuild"]

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Smoke Test"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "PDF Proxy"

[[workflows.workflow]]
name = "Smoke Test"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash scripts/replit_smoke.sh"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "PDF Proxy"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd server && python -m uvicorn pdf_proxy:app --host 0.0.0.0 --port 5000"
waitForPort = 5000

[deployment]
deploymentTarget = "autoscale"
run = ["python", "-m", "uvicorn", "server.pdf_proxy:app", "--host", "0.0.0.0", "--port", "5000"]

[[ports]]
localPort = 5000
externalPort = 80
