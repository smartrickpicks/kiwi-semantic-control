modules = ["bash", "nodejs-22", "python-3.11"]
[replit]
language = "python3"
run = "python3 local_runner/validate_config.py --base config/config_pack.base.json --patch config/config_pack.example.patch.json && python3 local_runner/run_local.py --base config/config_pack.base.json --patch config/config_pack.example.patch.json --standardized examples/standardized_dataset.example.json --out out/sf_packet.preview.json"

[nix]
channel = "stable-25_05"
packages = ["nano"]

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Smoke Test"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Viewer Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "PDF Proxy"

[[workflows.workflow]]
name = "Smoke Test"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash scripts/replit_smoke.sh"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Viewer Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash scripts/serve_viewer.sh"
waitForPort = 5000

[[workflows.workflow]]
name = "PDF Proxy"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd server && python -m uvicorn pdf_proxy:app --host 0.0.0.0 --port 8000"
waitForPort = 8000

[workflows.workflow.metadata]
outputType = "console"

[deployment]
deploymentTarget = "autoscale"
publicDir = "ui/viewer"
run = ["python", "-m", "http.server", "5000", "--directory", "ui/viewer"]

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8000
externalPort = 8000
